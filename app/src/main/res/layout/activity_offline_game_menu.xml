<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cardback"
    tools:context=".OfflineGameMenu">

    <RelativeLayout
        android:id="@+id/topbar"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#0e3421"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/playerlayout4"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <RelativeLayout
                android:id="@+id/car4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playeravatar4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/jackd" />

            </RelativeLayout>

            <TextView
                android:id="@+id/playername4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car4"
                android:layout_centerInParent="true"
                android:text="Abdullah"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/abc"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/passtext"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Coins"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/numPassesTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:text="0"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/abc"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/passtextj"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Money"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border_title"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/numPassesTvh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textAlignment="center"
                        android:text="0"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="Continue"
                    android:backgroundTint="#0e3421"
                    android:id="@+id/button1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="Single game"
                    android:backgroundTint="#0e3421"
                    android:id="@+id/singleGame" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="League"
                    android:backgroundTint="#0e3421"
                    android:id="@+id/button3" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:text="Tournamnet"
                    android:backgroundTint="#0e3421"
                    android:id="@+id/button4" />

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/topbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#0e3421"
        android:weightSum="6"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/playeravatafr4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/settings_foreground" />

            <TextView
                android:id="@+id/playername5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatafr4"
                android:layout_centerInParent="true"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/playeravatarr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/instructions_foreground" />

            <TextView
                android:id="@+id/playername55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatarr"
                android:layout_centerInParent="true"
                android:text="Instructions"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/statistics"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/playeravatarrr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/score_foreground" />

            <TextView
                android:id="@+id/playername555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatarrr"
                android:layout_centerInParent="true"
                android:text="Statistics"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/playeravatarrrr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/share_foreground" />

            <TextView
                android:id="@+id/playername5555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatarrrr"
                android:layout_centerInParent="true"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/support"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/playeravatarrrrr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/message_foreground" />

            <TextView
                android:id="@+id/playername55555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatarrrrr"
                android:layout_centerInParent="true"
                android:text="Support"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/policy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_title1"
            android:orientation="vertical"
            android:padding="1dp">

            <ImageView
                android:id="@+id/playeravatarrrrrr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pcnheight"
                android:layout_alignParentTop="true"
                android:layout_marginTop="1dp"
                android:src="@drawable/policy_foreground" />

            <TextView
                android:id="@+id/playername555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playeravatarrrrrr"
                android:layout_centerInParent="true"
                android:text="Policy"
                android:textColor="@color/white"
                android:textSize="8dp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
